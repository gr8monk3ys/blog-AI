# =============================================================================
# Production Environment Variables for Blog AI
# =============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
VERSION=1.0.0

# Server ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Uvicorn worker count (recommended: 2 * CPU cores + 1)
UVICORN_WORKERS=4

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Enable HTTPS redirect (set to true behind a reverse proxy with SSL)
HTTPS_REDIRECT_ENABLED=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GENERAL=60
RATE_LIMIT_GENERATION=10

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# AI Provider API Keys (at least one required)
# -----------------------------------------------------------------------------
# OpenAI (primary)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Gemini (optional)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# -----------------------------------------------------------------------------
# Research APIs (optional)
# -----------------------------------------------------------------------------
SERP_API_KEY=
SEC_API_API_KEY=

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Frontend Supabase (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------------------------------------------------
# Stripe Payment Configuration
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_PRO=price_your-pro-price-id
STRIPE_PRICE_ID_ENTERPRISE=price_your-enterprise-price-id

# Frontend Stripe (public)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-publishable-key

# -----------------------------------------------------------------------------
# Sentry Error Tracking
# -----------------------------------------------------------------------------
# Backend Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SERVER_NAME=blog-ai-prod

# Frontend Sentry
NEXT_PUBLIC_SENTRY_DSN=https://your-frontend-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=blog-ai-frontend
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# -----------------------------------------------------------------------------
# Build Information (set during CI/CD)
# -----------------------------------------------------------------------------
BUILD_DATE=
GIT_SHA=
