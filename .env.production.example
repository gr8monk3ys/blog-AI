# =============================================================================
# Blog AI Frontend - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production.local for production builds
# All NEXT_PUBLIC_* variables are exposed to the browser
# NEVER commit actual production values to version control

# =============================================================================
# Backend API Configuration (Required)
# =============================================================================

# Production API URL (must use HTTPS)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Production WebSocket URL (must use WSS)
NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

# API version (optional, defaults to v1)
# NEXT_PUBLIC_API_VERSION=v1

# Backend auth is via Clerk session JWTs (Authorization: Bearer ...).
# NEXT_PUBLIC_API_KEY is no longer required for the cloud SaaS.
# NEXT_PUBLIC_API_KEY=

# =============================================================================
# Clerk Authentication (Required)
# =============================================================================
# Get these from your Clerk dashboard

# Public key used by the browser
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Secret key used on the server (Next.js route handlers)
CLERK_SECRET_KEY=sk_live_your_secret_key

# Optional: default auth routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# =============================================================================
# Database (Neon Postgres) (Required)
# =============================================================================
# Used by Next.js server-side code (route handlers + server components).
# Do NOT prefix with NEXT_PUBLIC_.
DATABASE_URL=postgresql://user:password@host/db?sslmode=require

# =============================================================================
# Stripe Payment Configuration (Required for monetization)
# =============================================================================
# Get these from your Stripe dashboard: https://dashboard.stripe.com

# Stripe Publishable Key (safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Stripe Secret Key (server-side only)
# WARNING: Never expose this key in client-side code
STRIPE_SECRET_KEY=sk_live_your_secret_key

# Stripe Webhook Secret (for verifying webhook signatures)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (recurring subscription prices)
STRIPE_PRICE_ID_STARTER_MONTHLY=price_starter_monthly
STRIPE_PRICE_ID_STARTER_YEARLY=price_starter_yearly
STRIPE_PRICE_ID_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_ID_PRO_YEARLY=price_pro_yearly
# Business/Agency tier is intentionally disabled until team features exist.
# STRIPE_PRICE_ID_BUSINESS_MONTHLY=price_business_monthly
# STRIPE_PRICE_ID_BUSINESS_YEARLY=price_business_yearly
ENABLE_BUSINESS_TIER=false

# Legacy Supabase-era modules (disable in Neon-only SaaS until migrated)
ENABLE_KNOWLEDGE_BASE=false
ENABLE_PERFORMANCE_ANALYTICS=false
ENABLE_CONTENT_VERSIONING=false

# =============================================================================
# Sentry Error Tracking (Recommended)
# =============================================================================
# Get these from your Sentry project: https://sentry.io

# Sentry DSN for error tracking (client-side)
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Sentry organization slug
SENTRY_ORG=your-org

# Sentry project slug
SENTRY_PROJECT=blog-ai-frontend

# Sentry auth token (for uploading source maps in CI/CD)
# Generate at: https://sentry.io/settings/auth-tokens/
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# Analytics (Optional)
# =============================================================================

# Google Analytics Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# PostHog Analytics
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable maintenance mode
# NEXT_PUBLIC_MAINTENANCE_MODE=false

# Enable debug logging in production (not recommended)
# NEXT_PUBLIC_DEBUG=false

# =============================================================================
# Build Configuration
# =============================================================================

# Enable bundle analyzer during build
# ANALYZE=true

# Node environment (automatically set by Next.js)
# NODE_ENV=production
